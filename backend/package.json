{
  "name": "idurar-erp-crm",
  "version": "4.1.0",
  "engines": {
    "npm": "10.2.4",
    "node": "20.9.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js --ignore public/",
    "production": "NODE_ENV=production",
    "setup": "node src/setup/setup.js",
    "upgrade": "node src/setup/upgrade.js",
    "reset": "node src/setup/reset.js",
    "update-admin-name": "node src/setup/updateAdminName.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand --detectOpenHandles --forceExit",
    "test:models": "jest tests/models --runInBand --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.509.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "currency.js": "2.0.4",
    "dotenv": "16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "glob": "10.3.10",
    "html-pdf": "^3.0.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "mongodb": "^7.0.0",
    "mongoose": "^8.1.1",
    "mongoose-autopopulate": "^1.1.0",
    "multer": "^1.4.4",
    "node-cache": "^5.1.2",
    "openai": "^4.27.0",
    "pug": "^3.0.2",
    "resend": "^2.0.0",
    "shortid": "^2.2.16",
    "transliteration": "^2.3.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "nodemon": "3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 60000,
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/models/**/*.js",
      "src/controllers/**/*.js",
      "src/middlewares/**/*.js",
      "src/services/**/*.js",
      "!src/models/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "_moduleAliases": {
    "@": "src"
  },
  "main": "server.js",
  "author": "IDURAR",
  "email": "hello@idurarapp.com",
  "license": "Fair-code License",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idurar/idurar-erp-crm/.git"
  },
  "bugs": {
    "url": "https://github.com/idurar/idurar-erp-crm//issues"
  },
  "homepage": "https://github.com/idurar/idurar-erp-crm/#readme"
}
